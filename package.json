{
  "name": "tuliptakehome",
  "version": "1.0.0",
  "description": "Playwright test suite for SauceDemo. By default, all tests run in HEADLESS mode. Use :headed suffix for visible browser window.",
  "main": "index.js",
  "scripts": {
    "//": "========================================",
    "//note": "By default, all tests run in HEADLESS mode (no browser window). Add --headed flag or use :headed scripts to see the browser.",
    "//note2": "========================================",
    "//legacy": "--- Legacy Test (Non-POM) ---",
    "test1": "npx playwright test --project=\"test1\"",
    "test1:headed": "npx playwright test --project=\"test1\" --headed",
    "//chromium": "--- Chromium Feature Tests ---",
    "test:checkout:chromium": "npx playwright test --project=\"checkout-flow-chromium\"",
    "test:checkout:chromium:headed": "npx playwright test --project=\"checkout-flow-chromium\" --headed",
    "test:cart:chromium": "npx playwright test --project=\"cart-management-chromium\"",
    "test:cart:chromium:headed": "npx playwright test --project=\"cart-management-chromium\" --headed",
    "test:sorting:chromium": "npx playwright test --project=\"product-sorting-chromium\"",
    "test:sorting:chromium:headed": "npx playwright test --project=\"product-sorting-chromium\" --headed",
    "//firefox": "--- Firefox Feature Tests ---",
    "test:checkout:firefox": "npx playwright test --project=\"checkout-flow-firefox\"",
    "test:checkout:firefox:headed": "npx playwright test --project=\"checkout-flow-firefox\" --headed",
    "test:cart:firefox": "npx playwright test --project=\"cart-management-firefox\"",
    "test:cart:firefox:headed": "npx playwright test --project=\"cart-management-firefox\" --headed",
    "test:sorting:firefox": "npx playwright test --project=\"product-sorting-firefox\"",
    "test:sorting:firefox:headed": "npx playwright test --project=\"product-sorting-firefox\" --headed",
    "//webkit": "--- WebKit Feature Tests ---",
    "test:checkout:webkit": "npx playwright test --project=\"checkout-flow-webkit\"",
    "test:checkout:webkit:headed": "npx playwright test --project=\"checkout-flow-webkit\" --headed",
    "test:cart:webkit": "npx playwright test --project=\"cart-management-webkit\"",
    "test:cart:webkit:headed": "npx playwright test --project=\"cart-management-webkit\" --headed",
    "test:sorting:webkit": "npx playwright test --project=\"product-sorting-webkit\"",
    "test:sorting:webkit:headed": "npx playwright test --project=\"product-sorting-webkit\" --headed",
    "//all": "--- Run All Tests by Browser ---",
    "test:all:chromium": "npx playwright test --project=chromium",
    "test:all:chromium:headed": "npx playwright test --project=chromium --headed",
    "test:all:firefox": "npx playwright test --project=firefox",
    "test:all:firefox:headed": "npx playwright test --project=firefox --headed",
    "test:all:webkit": "npx playwright test --project=webkit",
    "test:all:webkit:headed": "npx playwright test --project=webkit --headed",
    "test:all:browsers": "npx playwright test --project=chromium --project=firefox --project=webkit",
    "test:all:browsers:headed": "npx playwright test --project=chromium --project=firefox --project=webkit --headed",
    "//a11y": "--- Accessibility Audit ---",
    "test:a11y": "npx playwright test --project=\"accessibility\"",
    "test:a11y:headed": "npx playwright test --project=\"accessibility\" --headed",
    "test:a11y:report": "npx playwright test --project=\"accessibility\" && npx playwright show-report html-report",
    "playwright:ui": "npx playwright test --ui",
    "playwright:report": "npx playwright show-report"
  },
  "keywords": [],
  "author": "Vignesh",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "axe-html-reporter": "^2.2.11",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3"
  }
}
